# ============================================
# ARQUIVO DE EXEMPLO DE VARIAVEIS DE AMBIENTE
# Copie este arquivo para .env e preencha os valores
# ============================================

# ============================================
# IA (PADRAO: Claude Code CLI / assinatura)
# ============================================
IA_PROVIDER=claude_code
CLAUDE_CODE_BIN=claude
IA_MODELO_ENTREVISTAS=sonnet
IA_MODELO_INSIGHTS=opus
IA_EVITAR_PROB_ABSOLUTA=true
IA_PROB_EPSILON=1.0
IA_ALLOW_API_FALLBACK=false

# API Claude Anthropic (opcional; usado somente quando necessario)
CLAUDE_API_KEY=sua-chave-api-claude-aqui

# JWT Secret (gere uma chave aleatoria longa)
SECRET_KEY=sua-chave-secreta-aqui

# Algoritmo JWT
ALGORITHM=HS256

# Tempo de expiracao do token (minutos)
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Banco de dados PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pesquisa_eleitoral

# Para Docker
DATABASE_URL_DOCKER=postgresql://postgres:postgres@db:5432/pesquisa_eleitoral

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Ambiente
NODE_ENV=development
PYTHON_ENV=development

# PostgreSQL (Docker)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=pesquisa_eleitoral
